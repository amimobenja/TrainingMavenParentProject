<?xml version="1.0" encoding="UTF-8"?>
<sequence name="SwitchSequence" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
  <log description="FirstLog" level="custom">
    <property name="Log" value="*************************************Hello World"/>
  </log>
  <call>
    <endpoint key="gov:/endpoints/FilterResTAPIEndPoint.xml"/>
  </call>
  <log description="FirstLog" level="custom">
    <property name="BODY" value="json-eval($.)"/>
  </log>
  <switch source="get-property('uri.var.company')">
    <case regex="telkom">
      <payloadFactory media-type="json">
        <format>
					{
					"Telkom ID":"$1",
					"Telkom Comment": "$2",
					"Company Description": "$3"
					}
				</format>
        <args>
          <arg evaluator="xml" expression="//id"/>
          <arg evaluator="xml" expression="//comments"/>
          <arg evaluator="xml" expression="//description"/>
        </args>
      </payloadFactory>
    </case>
    <case regex="wso2">
      <payloadFactory media-type="json">
        <format>
					{
					"Customer ID":"$1",
					"Customer Name": "WSO2",
					"Comment": "$2",
					"Company Description": "$3"
					}
				</format>
        <args>
          <arg evaluator="xml" expression="//id"/>
          <arg evaluator="xml" expression="//comments"/>
          <arg evaluator="xml" expression="//description"/>
        </args>
      </payloadFactory>
    </case>
    <default>
      <payloadFactory media-type="json">
        <format>
					{
					"Error":"Error"
					}
				</format>
        <args/>
      </payloadFactory>
      <property name="HTTP_SC" scope="axis2" type="STRING" value="400"/>
    </default>
  </switch>
  <respond/>
</sequence>
